@model IEnumerable<Proyecto.Models.Product>

@{
    ViewBag.Title = "Inicio";
}

<div class="jumbotron">
    <h1>Market MVC</h1>
    <p class="lead">Donde comprar es el placer de vivir.</p>
</div>

<div class="productList">
    @{ int i = 0; }
    @foreach (var item in Model)
    {
        if (i % 3 == 0)
        {
            @Html.Raw("<div class='row'>");
        }

        <div class="col-md-4">
            <h2>@item.ProductName</h2>

        </div>

        if ((i + 1) % 3 == 0)
        {
            @Html.Raw("</div>");
        }
        i++;
    }
</div>

@section Scripts{
    <script type="text/javascript" src="~/app/home.js"></script>
}
